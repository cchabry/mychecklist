
{
  "version": 2,
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { 
      "src": "/api/notion-proxy", 
      "dest": "/api/notion-proxy.ts",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    { "src": "/api/ping", "dest": "/api/ping.ts" },
    { "src": "/api/vercel-debug", "dest": "/api/vercel-debug.ts" }
  ]
}
